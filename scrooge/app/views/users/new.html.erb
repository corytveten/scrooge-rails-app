<h1>Sign Up</h1>
<%= form_for @user do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br><br>
	
	<%= f.label :password %><br>
	<%= f.text_field :password %><br><br>
	
	<%= f.label :admin, 'Check box if you are an admin' %>
	<%= f.check_box :admin %><br><br>
	
	<%= f.submit 'Create User'%>
	
	<% end %>
