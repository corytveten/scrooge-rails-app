<h3>Transaction Items</h3>
<p></p>
<%= form_for @transaction_item do |f| %>
	
	<p>Select Item Type:
	<%= f.collection_select :item_id, Item.all, :id, :name%></p><br>
	
	<%= f.label :quantity %><br>
	<%= f.number_field :quantity %><br><br>
	
	<%= f.label :unit_amount %><br>
	<%= f.number_field :unit_amount %><br><br>

	<%= f.submit "Add Item" %>
	
	<% end %>
	
		